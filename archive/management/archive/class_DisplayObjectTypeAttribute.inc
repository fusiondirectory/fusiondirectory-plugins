/*! \brief This class allows to display an object type
 */
class DisplayObjectTypeAttribute extends \FusionDirectory\Core\SimplePlugin\Attribute
{
  public function renderFormInput (): string
  {
    $value = $this->getValue();
    $infos = objects::infos($value);
    $text = htmlescape($infos['name']);

    if (isset($infos['icon'])) {
      $text = '<img alt="" title="'.htmlescape($infos['name']).'" src="'.htmlescape($infos['icon']).'" class="center"/>&nbsp;'.$text;
    }
    return '{literal}'.$text.'{/literal}';
  }
}
